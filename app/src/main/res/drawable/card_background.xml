<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/card_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#FAFAFA" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <item android:right="4dp" android:left="4dp" android:bottom="8dp"> <!-- Shadow attributes -->
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
